<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:elevation="0dp">


    <ImageView
        android:id="@+id/upPoster"
        android:layout_width="231dp"
        android:layout_height="211dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/poster"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/nsTvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/poster_joker" />

    <TextView
        android:id="@+id/upTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="Joker"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="@+id/upPoster"
        app:layout_constraintStart_toStartOf="@+id/upPoster"
        app:layout_constraintTop_toBottomOf="@+id/upPoster" />

    <TextView
        android:id="@+id/upTvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2019-05-17"
        android:textColor="#ECF0F1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nsTvTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>

